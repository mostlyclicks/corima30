<% @bg_colors = ["gray"] %>
<% @bg_image = @bg_colors.sample %>
<% @rand_offset_num = rand(5...95) %>
<% @rand_color_num = rand(1...7) %>

<style>
  .wheel-index {
    background-image:url(/assets/bg-<%= @rand_color_num %>-<%= @bg_image %>.gif);
    /*background-position-x:<%= @rand_offset_num %>%;*/
  }
</style>

<%#= render '/refinery/content_page' %>
<section class="wheel-index">
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <div class="row">
        <div class="col-xs-5 col-md-12">
          <% @mcc_hero = @mcc_splus_wheels[2] %>
          <%= image_fu @mcc_hero.wheel_image_1, '500x500c', class: 'img-responsive' %>
        </div>
        <div class="col-xs-7 col-md-12">
          <h3>Corima MCC S+</h3>
          <p>Carbon hubs and spokes</p>
        </div>
      </div>
      <ul>
        <% @mcc_splus_wheels.each do |w| %>
          <li><%= link_to w.name, refinery.wheels_wheel_path(w) %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-3">
      <div class="row">
        <div class="col-xs-5 col-md-12">
          <% @splus_hero = @splus_wheels[4] %>
          <%= image_fu @splus_hero.wheel_image_1, '500x500c', class: 'img-responsive' %>
        </div>
        <div class="col-xs-7 col-md-12">
          <h3>Corima S+</h3>
          <p>Carbon hubs and steel spokes</p>
        </div>
      </div>
      <ul>
        <% @splus_wheels.each do |w| %>
          <li><%= link_to w.name, refinery.wheels_wheel_path(w) %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-3">
      <div class="row">
        <div class="col-xs-5 col-md-12">
          <% @s_hero = @s_wheels[1] %>
          <%= image_fu @s_hero.wheel_image_1, '500x500c', class: 'img-responsive' %>
        </div>
        <div class="col-xs-7 col-md-12">
          <h3>Corima S</h3>
          <p>Aluminum hubs and steel spokes</p>
        </div>
      </div>
      <ul>
        <% @s_wheels.each do |w| %>
          <li><%= link_to w.name, refinery.wheels_wheel_path(w) %></li>
        <% end %>
      </ul>
    </div>
    <div class="col-md-3">
      <div class="row">
        <div class="col-xs-5 col-md-12">
          <% @no_s_hero = @no_s_wheels[2] %>
          <%= image_fu @no_s_hero.wheel_image_1, '500x500c', class: 'img-responsive' %>
        </div>
        <div class="col-xs-7 col-md-12">
          <h3>Corima</h3>
          <p>Alloy hubs and steel spokes</p>
        </div>
      </div>
      <ul>
        <% @no_s_wheels.each do |w| %>
          <li><%= link_to w.name, refinery.wheels_wheel_path(w) %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
</section>


