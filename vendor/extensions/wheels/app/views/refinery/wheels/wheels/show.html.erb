<section id="wheel-show-images">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h1><%= @wheel.name %></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        <%= image_fu @wheel.wheel_image_1, '1080x1200', class: 'img-responsive' %>
      </div>
      <div class="col-sm-12 col-md-6">
    
        <%= image_fu @wheel.wheel_image_1, '1080x450+320+495', class: 'img-responsive', id: 'zoomed-in' %>
        <div class="row">
          <div class="col-md-6">
            <table class="table table-striped">
              <tbody>
                <tr>
                  <td width="100">Profile:</td>
                  <td><%= @wheel.profile %>mm</td>
                </tr>
                <tr>
                  <td width="100">Spoke Count:</td>
                  <td><%= @wheel.spoke_count %></td>
                </tr>    
                <tr>
                  <td width="100">Spoke Type:</td>
                  <td><%= @wheel.spoke_type %></td>
                </tr>
                <tr>
                  <td width="100">Hub Material:</td>
                  <td><%= @wheel.hub_finish %></td>
                </tr>        
              </tbody>
            </table>
          </div>
          <div class="col-md-6">
            <table class="table table-striped">
              <tbody>
                <tr>
                  <td width="100">Weight:</td>
                  <td><%= @wheel.weight %></td>
                </tr>
                <tr>
                  <td width="100">Carbon Weave:</td>
                  <td><%= @wheel.carbon_weave %></td>
                </tr>    
                <tr>
                  <td width="100">Type of Use:</td>
                  <td><%= @wheel.type_of_use %></td>
                </tr>
                <tr>
                  <td width="100">Diameter:</td>
                  <td><%= @wheel.diameter %></td>
                </tr>        
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="wheel-show-sub">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h3>All <%= @wheel.hub_type %> Wheels</h3>
          <% get_cat_wheels(@wheel.hub_type) %>
            <% @cat_wheels.each do |cw| %>
              <%= link_to cw.name, refinery.wheels_wheel_path(cw) %><br />
            <% end %>
      </div>
      <div class="col-md-6">
        <h3>Related Wheels</h3>
        <% @all_wheels = Refinery::Wheels::Wheel.all %>
        <div class="row">
          <div class="col-xs-6 text-center">
            <% get_frrr_wheel(@wheel.related_wheel_frrr_id) %>
            <%= image_fu @related_frrr_wheel.wheel_image_1, '600x600', class: 'img-responsive' %>
            <caption><%= link_to @related_frrr_wheel.name, refinery.wheels_wheel_path(@related_frrr_wheel) %></caption>
          </div>
          <div class="col-xs-6 text-center">
            <% get_related_wheel(@wheel.related_wheel_type_id) %>
            <%= image_fu @related_wheel.wheel_image_1, '600x600', class: 'img-responsive' %>
            <caption><%= link_to @related_wheel.name, refinery.wheels_wheel_path(@related_wheel) %></caption>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

