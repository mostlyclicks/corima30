    <p>
      <%=raw @wheel.related_wheel_type_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="wheels">
      <% @wheels.each do |wheel| %>
        <li>
          <%= link_to wheel.name, refinery.wheels_wheel_path(wheel) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
