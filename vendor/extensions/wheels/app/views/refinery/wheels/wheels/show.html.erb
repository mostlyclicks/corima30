    <p>
      <%=raw @wheel.type_of_use %>
    </p>
  </section>
  <section>
    <h1>Width</h1>
    <p>
      <%=raw @wheel.width %>
    </p>
  </section>
  <section>
    <h1>Profile</h1>
    <p>
      <%=raw @wheel.profile %>
    </p>
  </section>
  <section>
    <h1>Spoke Count</h1>
    <p>
      <%=raw @wheel.spoke_count %>
    </p>
  </section>
  <section>
    <h1>Spoke Type</h1>
    <p>
      <%=raw @wheel.spoke_type %>
    </p>
  </section>
  <section>
    <h1>Hub Type</h1>
