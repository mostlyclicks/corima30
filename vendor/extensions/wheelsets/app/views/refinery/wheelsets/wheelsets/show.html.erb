<section id="wheelsets-top">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <% @front_wheel = Refinery::Wheels::Wheel.where(id: @wheelset.front_wheel_id) %>
        <% @rear_wheel = Refinery::Wheels::Wheel.where(id: @wheelset.rear_wheel_id) %>

        <h1><%= @wheelset.name %></h1>
        <%=raw @wheelset.description %>
        <h3><strong><%= number_to_currency(@wheelset.price) %></strong></h3>

        <% @front_wheel.each do |c| %>
          <p><%= c.name %><%= wheelset_wheel_weight(c.weight) %>
          <% wheelset_weight_fr(c.weight) %>
          <%= image_fu c.wheel_image_1, '500x600' %>
        <% end %>
        <br />
        <% @rear_wheel.each do |c| %>
          <%= c.name %><%= wheelset_wheel_weight(c.weight) %>
          <% wheelset_weight_rr(c.weight) %><br />
          <strong>Wheelset Weight: <%= calc_weights %></strong>
        </p>
          <%= image_fu c.wheel_image_1, '500x600' %>


        <% end %>
        

        

      </div>

    </div>
  </div>

</section>



<% content_for :body_content_title do %>
  <%= @wheelset.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @wheelset.name %>
    </p>
  </section>
  <section>
    <h1>Front Wheel</h1>
    <p>
      <%=raw @wheelset.front_wheel %>
    </p>
  </section>
  <section>
    <h1>Rear Wheel</h1>
    <p>
      <%=raw @wheelset.rear_wheel %>
    </p>
  </section>
  <section>
    <h1>Price</h1>
    <p>
      <%=raw @wheelset.price %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @wheelset.description %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="wheelsets">
      <% @wheelsets.each do |wheelset| %>
        <li>
          <%= link_to wheelset.name, refinery.wheelsets_wheelset_path(wheelset) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%#= render '/refinery/content_page' %>
