<% @front_wheel = Refinery::Wheels::Wheel.where(id: @wheelset.front_wheel_id) %>
<% @rear_wheel = Refinery::Wheels::Wheel.where(id: @wheelset.rear_wheel_id) %>

<% content_for :front_wheel_section do %>
  <% @front_wheel.each do |c| %>
    
    <% wheelset_weight_fr(c.weight) %>
    <%= image_fu c.wheel_image_1, '500x600', class: 'img-responsive'  %>
    <%= c.name %><%= wheelset_wheel_weight(c.weight) %>
  <% end %>
<% end %>

<% content_for :rear_wheel_section do %>
  <% @rear_wheel.each do |c| %>
    
    <% wheelset_weight_rr(c.weight) %>
    <%= image_fu c.wheel_image_1, '500x600', class: 'img-responsive' %>
    <%= c.name %><%= wheelset_wheel_weight(c.weight) %>
  <% end %>
<% end %>


<section id="wheelsets-top" style="padding-bottom:40px;">
