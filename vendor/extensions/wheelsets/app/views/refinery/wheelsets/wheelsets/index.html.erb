<% content_for :body do %>
  <ul id="wheelsets">
    <% @wheelsets.each do |wheelset| %>
      <li>
        <%= link_to wheelset.name, refinery.wheelsets_wheelset_path(wheelset) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%#= render '/refinery/content_page' %>

<%# @front_wheel = Refinery::Wheels::Wheel.where(id: @wheelset.front_wheel_id) %>
<%# @rear_wheel = Refinery::Wheels::Wheel.where(id: @wheelset.rear_wheel_id) %>

<style>
.ws-container {
  position:relative;
  height:200px;width:300px;
  margin:0 auto;
}
.ws-left, .ws-right {
  position:absolute;
  
  
}

.ws-left {
  right:-30px;
  z-index:20001;

}

.ws-right {
  left:-30px;

}

</style>

<section class="wheel-index2">
  <div class="container">
    <div class="row">
      <% @wheelsets.each do |w| %>
        <div class="col-md-4 text-center">
          
          <h4 class="text-center"><%= link_to w.name, refinery.wheelsets_wheelset_path(w) %></h4>

          <% @front_wheel = Refinery::Wheels::Wheel.where(id: w.front_wheel_id) %>
          <% @rear_wheel = Refinery::Wheels::Wheel.where(id: w.rear_wheel_id) %>

          <div class="row ws-container">
            <div class="col-md-6 ">
              <% @front_wheel.each do |fw| %>
                <%= image_fu fw.wheel_image_1, '500x600', class: 'img-responsive ws-left' %>
              <% end %>
            </div>
            <div class="col-md-6">
              <% @rear_wheel.each do |rw| %>
                <%= image_fu rw.wheel_image_1, '500x600', class: 'img-responsive ws-right' %>
              <% end %>
            </div>
          </div>
          
          
          
          

        </div>
      <% end %>
    </div>


  </div>
</section>
