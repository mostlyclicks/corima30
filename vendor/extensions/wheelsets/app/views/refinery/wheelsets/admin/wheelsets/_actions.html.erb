<ul>
  <% if ::Refinery::Wheelsets::Admin::WheelsetsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.wheelsets_admin_wheelsets_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_wheelsets_admin_wheelset_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Wheelsets::Admin::WheelsetsController.sortable? && ::Refinery::Wheelsets::Wheelset.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Wheelsets"),
                 refinery.wheelsets_admin_wheelsets_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Wheelsets"),
                 refinery.wheelsets_admin_wheelsets_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
