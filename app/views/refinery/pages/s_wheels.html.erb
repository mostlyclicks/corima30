<h1>S+</h1>
  <ul>
    <% @splus_wheels.each do |w| %>
      <li><%= link_to w.name, refinery.wheels_wheel_path(w) %></li>
    <% end %>
  </ul>
<% end %>


<% @bg_colors = ["mint", "gray", "yellow", "blue"] %>
<% @bg_image = @bg_colors.sample %>
<% @rand_num = rand(5-95) %>

<style>
  #l2-wheels {
    background-image:url(/assets/bg-<%= @bg_image %>.gif);
    background-position-x:<%= @rand_num %>%;
  }
</style>


<section id="l2-wheels">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h1>CORIMA MCC S+</h1>
        <p></p>
      </div>
    </div>
    <div class="row">
      <% @splus_wheels.each do |w| %>
        <div class="col-md-3 col-xs-6 text-center">
          <%= link_to (image_fu w.wheel_image_1, '400x400', class: 'img-responsive'), wheels_wheel_path(w) %>
          <%= link_to w.name, wheels_wheel_path(w) %>
        </div>
      <% end %>
    </div>
  </div>
</section>



